{
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "lib": ["DOM", "ES2020", "ES2021", "ES2022"],
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src"
  },
  "compileOnSave": true,
  "include": ["src"],
  "typedocOptions": {
    "out": "./docs/",
    "theme": "default"
  }
}
